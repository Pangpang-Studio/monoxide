<!doctype html>
<html>
  <head>
    <style>
      body {{
        font-family: system-ui, -apple-system, sans-serif;
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
      }}
      .grid {{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
        gap: 1rem;
      }}
      .glyph-link {{
        display: flex;
        justify-content: center;
        align-items: center;
        aspect-ratio: 1;
        border: 1px solid #ccc;
        border-radius: 4px;
        text-decoration: none;
        color: #282828;
        font-size: 1.5rem;
      }}
      .glyph-link:hover {{
        background: #f5f5f5;
      }}
      h1 {{
        margin-bottom: 2rem;
      }}
    </style>
  </head>
  <body>
    <h1>Monoxide Playground</h1>
    <div class="grid">
      {glyph_links}
    </div>
  </body>
</html>
